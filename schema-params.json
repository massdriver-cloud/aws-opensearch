                    "type": "integer"
                }
            },
            "required": [
                "index_slow_logs",
                "search_slow_logs",
                "es_application_logs",
                "audit_logs"
            ],
            "title": "Logging",
            "type": "object"
        },
        "networking": {
            "properties": {
                "subnet_type": {
                    "$md.immutable": true,
                    "default": "internal",
                    "description": "Deploy the database to internal subnets (cannot reach the internet) or private subnets (internet egress traffic allowed)",
                    "enum": [
                        "internal",
                        "private"
                    ],
                    "title": "Subnet Type",
                    "type": "string"
                }
            },
            "title": "Networking",
            "type": "object"
        },
        "opensearch": {
            "description": "OpenSearch Configuration.",
            "properties": {
                "version": {
                    "$md.immutable": true,
                    "default": "OpenSearch_2.3",
                    "oneOf": [
                        {
                            "const": "OpenSearch_2.3",
                            "title": "2.3"
                        },
                        {
                            "const": "OpenSearch_1.3",
                            "title": "1.3"
                        },
                        {
                            "const": "OpenSearch_1.2",
                            "title": "1.2"
                        },
                        {
                            "const": "OpenSearch_1.1",
                            "title": "1.1"
                        },
                        {
                            "const": "OpenSearch_1.0",
                            "title": "1.0"
                        }
                    ],
                    "title": "Version",
                    "type": "string"
                }
            },
            "required": [
                "version"
            ],
            "title": "OpenSearch",
            "type": "object"
        },
        "security": {
            "properties": {
                "enable_fgac": {
                    "default": false,
                    "description": "**This CANNOT be turned on during the first deployment**. [Fine-grained access control](https://docs.aws.amazon.com/opensearch-service/latest/developerguide/fgac.html) offers additional ways of controlling access to your data on Amazon OpenSearch Service.",
                    "title": "Fine-Grained Access Control",
                    "type": "boolean"
                }
            },
            "title": "Security",
            "type": "object"
        }
    },
    "required": [
        "opensearch",
        "cluster",
        "logging",
        "networking",
        "security"
    ],
    "title": "aws-opensearch"
}
